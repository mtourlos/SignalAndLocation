<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/service_lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/service_lat"/>
    <TextView
        android:id="@+id/service_lon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/service_lon"/>
    <TextView
        android:id="@+id/active_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/active_user"/>
    
    <TextView
        android:id="@+id/server_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/server_ip"/>
    
    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/timestamp"/>

    <TextView
        android:id="@+id/signal_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/signal_out"/>

    <TextView
        android:id="@+id/operator_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/signal_out" />
    
    <TextView
        android:id="@+id/network_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/network_type" />

    <TextView
        android:id="@+id/lat" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/lat" />

    <TextView
        android:id="@+id/lon" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/lon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_send" 
        android:onClick="sData"/>
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_strtService" 
        android:onClick="startService"/>
   
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_stpService" 
        android:onClick="stopService"/>
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_storeData" 
        android:onClick="storePilotData"/>
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_previewData" 
        android:onClick="loadLocalDb"/>

</LinearLayout>